<Window x:Class="WPFEditor.TileSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tile Selection" Height="343" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Background="Black">
        <ScrollViewer HorizontalAlignment="Stretch" Margin="0,41,0,0" Name="scrollViewer1" VerticalAlignment="Stretch" Width="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True">
            <Grid Name="grid1" Margin="0,0,0,0" />
        </ScrollViewer>
        <Button Background="Blue" BorderBrush="White" Content="Edit Tile" FontFamily="Times New Roman" FontSize="14" FontWeight="Bold" Foreground="White" Height="23" HorizontalAlignment="Left" Name="doneButton" VerticalAlignment="Top" Width="125" Margin="12,12,0,0" Click="editButton_Click" Focusable="False" />
        <Ellipse Margin="0,-57,-40,0" Name="ellipse1" Stroke="Black" Height="92" VerticalAlignment="Top" HorizontalAlignment="Right" Width="91">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                    <GradientStop Color="#FFB0B0B0" Offset="0.856" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</Window>
