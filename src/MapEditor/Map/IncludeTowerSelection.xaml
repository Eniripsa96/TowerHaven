<Window x:Class="WPFEditor.IncludeTowerSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tower Selection" Height="300" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid Background="Black">
        <Button Background="Blue" BorderBrush="White" Content="Done" Focusable="False" FontFamily="Times New Roman" FontSize="14" FontWeight="Bold" Foreground="White" Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="doneButton" VerticalAlignment="Top" Width="131" Click="doneButton_Click" />
        <Button Background="Blue" BorderBrush="White" Content="Clear All" Focusable="False" FontFamily="Times New Roman" FontSize="14" FontWeight="Bold" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="0,10,14,0" Name="clearAllButton" VerticalAlignment="Top" Width="117" Click="clearAllButton_Click" />
        <ScrollViewer HorizontalAlignment="Left" Margin="0,41,0,0" Name="scrollViewer1" Width="278" VerticalScrollBarVisibility="Auto" CanContentScroll="True">
            <Grid Name="grid1" Margin="0,0,0,0" />
        </ScrollViewer>
    </Grid>
</Window>
